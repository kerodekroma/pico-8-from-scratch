pico-8 cartridge // http://www.pico-8.com
version 43
__lua__
function _init()
 my_sprite = {}
 my_sprite.frame = 1
 my_sprite.x = 25
 my_sprite.y = 25
 speed = 5
 -- a bigger sprite
 bigger_sprite = {}
 bigger_sprite.frame = 6
 -- a sprite to show how the flip works
 flip_sprite = {
   frame = 8
 }
end

function _update()
  -- validating if an arrow button has been pressed
  if btn(➡️) then 
   my_sprite.x += speed
   my_sprite.frame = 2
   return
  end
  
  if btn(⬅️) then 
   my_sprite.x -= speed  
   my_sprite.frame = 3
   return
  end
  
  if btn(⬆️) then
  	my_sprite.y -= speed
  	my_sprite.frame = 4
  	return
  end
  
  if btn(⬇️) then 
   my_sprite.y += speed
   my_sprite.frame = 5
   return
  end

  -- validating other buttons
  if btn(❎) then 
    my_obj.x = 64
    my_obj.y = 64
    return
  end
  
  -- default sprite
  my_sprite.frame = 1
end

function _draw()
 cls()
 -- rendering a single sprite
 -- spr(frame_index, x, y)
 print("rendering sprites")
 print("=======")
 spr(1, 35, 30)
 -- animating it!
 spr(my_sprite.frame, my_sprite.x, my_sprite.y)

 -- bigger sprite
 -- the 2, 2 extra params are to show an sprite multiple of 16
 spr(bigger_sprite.frame, 64, 64, 2, 2)

 -- flipping a sprite
 -- default is false, but is required to define the default scale 1x1
 spr(flip_sprite.frame, 10, 50, 1, 1, false, false)
 -- setting it up to true, flips it horizontally!
 spr(flip_sprite.frame, 20, 50, 1, 1, true, false)
 -- setting it up to true the next param, flips it horizontally!
 spr(flip_sprite.frame, 30, 50, 1, 1, true, true)
 -- setting it up to false the flip-x param, flips it just vertically!
 spr(flip_sprite.frame, 40, 50, 1, 1, false, true)

 
 -- scaling a single one!
 -- not sure what 6 instead of 1 to render the 1 :/
 sspr(6, 0, 8, 8, 35, 30, 16, 16)
 
 
end
